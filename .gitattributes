# Auto detect text files and normalize line endings to LF on checkout
* text=auto

# Source code
*.py text eol=lf
*.sh text eol=lf

# Configuration files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerfile text eol=lf
.dockerignore text eol=lf

# CI/CD
.gitignore text eol=lf
.gitattributes text eol=lf

# Makefiles (must use tabs, not spaces)
Makefile text eol=lf
*.mk text eol=lf

# Binary files - do not normalize, do not diff
*.joblib binary
*.pkl binary
*.pickle binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.arff binary
*.zip binary
*.tar.gz binary
*.whl binary
*.egg binary

# Archives
*.7z binary
*.gz binary
*.tar binary
*.tgz binary

